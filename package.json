{
  "name": "unchained-next",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "docker-build": "docker build -f apps/web/Dockerfile . -t unchained-next-app",
    "docker-build-target": "docker buildx build --platform linux/amd64,linux/arm64 -f apps/web/Dockerfile . -t ignacywie/web-app:latest --push",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2",
    "@repo/typescript-config": "workspace:*"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
